# Server
PORT=3000
NODE_ENV=development

# Auth
# GOOGLE_CLIENT_ID can be a single value or a comma-separated list
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
JWT_SECRET=your-long-random-jwt-secret

# Admin bootstrap (comma-separated emails auto-assigned as admin & approved)
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# Database (PostgreSQL)
# Format: postgresql://user:pass@host:5432/dbname
DATABASE_URL=postgresql://user:pass@localhost:5432/grad_hub_tracker

# Uploads
# Files are stored under this folder; served at /uploads
UPLOAD_DIR=./uploads

# CORS
# Set to your frontend origins (comma-separated) or leave empty to allow all in dev
# In this project Vite dev runs on :8080
FRONTEND_ORIGIN=http://localhost:8080
